<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ControlButton">
        <item name="android:layout_width">@dimen/control_icon_size</item>
        <item name="android:layout_height">@dimen/control_icon_size</item>
        <item name="android:layout_marginTop">@dimen/material_margin</item>
        <item name="android:layout_marginRight">@dimen/material_margin</item>
        <item name="android:layout_marginLeft">@dimen/material_margin</item>
        <item name="android:layout_marginBottom">@dimen/material_margin</item>

    </style>


    <style name="Theme.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Light.Status.Bar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>