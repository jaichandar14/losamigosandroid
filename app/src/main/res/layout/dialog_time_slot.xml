<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callBackVM"
            type="com.bpmlinks.vbank.ui.callback.CallbackDialogViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_16"
        app:cardUseCompatPadding="true">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_12">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_cancel_gray_24dp"
                        android:visibility="gone" />
                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfpro_text_medium"
                    android:gravity="center"
                    android:text="@string/lbl_choose_preferred_time"
                    android:textColor="@color/color_grey4"
                    android:textSize="@dimen/size_19sp" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lnr_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_12"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                       >
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinnerTimeSlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@null"
                            android:entries="@array/time_slot"
                            android:gravity="center"
                            android:padding="@dimen/dp_0"
                            android:spinnerMode="dropdown"
                            android:textSize="@dimen/size_18sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_spinner_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/time_slot_border"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_no_slots_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_16"
                    android:text="@string/lbl_no_slots_available"
                    android:visibility="gone" />



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:visibility="invisible"
                        android:id="@+id/btnNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_curve_grey"
                        android:backgroundTint="@color/color_grey"
                        android:fontFamily="@font/sfpro_text_regular"
                        android:minHeight="@dimen/dp_0"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="@string/all_alert_dialog_cancel"
                        android:textAllCaps="false"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/size_15sp"
                        android:layout_margin="@dimen/size_8dp"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:visibility="invisible"
                        android:id="@+id/btnYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_border"
                        android:backgroundTint="@color/color_splash"
                        android:fontFamily="@font/sfpro_text_regular"
                        android:text="@string/all_alert_dialog_submit"
                        android:minHeight="@dimen/dp_0"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size_15sp"
                        android:layout_margin="@dimen/size_8dp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.cardview.widget.CardView>
</layout>
