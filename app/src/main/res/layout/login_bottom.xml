<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="loginVMLayout"
            type="com.bpmlinks.vbank.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_gray_bg">

        <LinearLayout
            android:id="@+id/lnrTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/splash_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_30dp"
                    android:layout_marginTop="@dimen/size_60dp"
                    android:visibility="invisible"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/home_logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_30dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_text_regular"
                        android:gravity="start"
                        android:visibility="gone"
                        android:lineSpacingExtra="@dimen/dp_1"
                        android:text="@string/splash_text"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size_12sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_white"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/size_30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/loginscreenew" />



            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lnrUserInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_home"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_30dp"
                    android:layout_marginEnd="@dimen/size_30dp"
                    android:layout_marginBottom="@dimen/dp_12"
                    app:cardCornerRadius="@dimen/dp_16"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:id="@+id/layout_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/size_20dp"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_20">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_10dp"
                            app:tabIndicatorColor="@color/login_button_colore"
                            app:tabInlineLabel="true"
                            app:tabIndicatorFullWidth="true"
                            app:tabPaddingBottom="0dp"
                            app:tabPaddingEnd="0dp"
                            app:tabPaddingStart="0dp"
                            android:fontFamily="@font/poppins_medium"
                            app:tabPaddingTop="0dp"
                            app:tabSelectedTextColor="@color/color_black2"
                            app:tabTextColor="@color/color_grey2"
                           >

                            <com.google.android.material.tabs.TabItem
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout="@layout/custom_tab"

                            />


                        </com.google.android.material.tabs.TabLayout>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_curve_grey"
                            android:drawableStart="@drawable/name"
                            android:drawablePadding="@dimen/size_16dp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@{loginVMLayout.userInput.customerFirstName}"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_16sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:background="@drawable/rectangle_curve_grey"
                            android:drawableStart="@drawable/email"
                            android:drawablePadding="@dimen/size_16dp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@{loginVMLayout.userInput.emailId}"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_16sp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:layout_marginBottom="@dimen/size_20dp"
                            android:background="@drawable/rectangle_curve_grey"
                            android:drawableStart="@drawable/mobile"
                            android:drawablePadding="@dimen/size_16dp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/mobile_no"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_10"
                            android:text="@{loginVMLayout.userInput.mobileNumber}"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_16sp" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/size_15dp"
                            android:layout_marginBottom="@dimen/size_20dp"
                            android:text="@string/login_string"
                            android:id="@+id/login_btn"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/rectangle_blue_fill_curve"
                            android:layout_height="match_parent">



                        </androidx.appcompat.widget.AppCompatButton>





                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </androidx.appcompat.widget.LinearLayoutCompat>



        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            android:id="@+id/bottomMenu"
            layout="@layout/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35dp"
            android:background="@color/color_splash"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            android:gravity="center">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered By "
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Los AmigosS"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

